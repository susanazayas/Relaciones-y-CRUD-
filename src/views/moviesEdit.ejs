<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Película a Editar:  <%= Movie.title %></h1>
    <%  if (locals.errors) { %>
        <ul>
            <% Object.keys(errors).forEach(element => { %>
                <li><%- errors[element].msg %></li>
            <%})%>
        </ul>
     <% } %>
    <section class="formulario">
        <form action="/movies/update/<%= Movie.id %>?_method=PUT" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="title" value="<%= Movie.title %>" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="rating" value="<%= Movie.rating %>" required></p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="awards" value="<%= Movie.awards %>" required></p>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="release_date" value="<%= Movie.release_date %>" required></p>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= Movie.length %>" required></p>
            <label for="genres">GENRES</label>
            <select name="genre_id" id="genres">
                <% genres.forEach(genre => { %>
                    <option value="<%- genre.id %>" <%= genre.id == Movie.genre_id ? "selected" : "" %>><%- genre.name %></option>
                <% }) %>
            </select>
            <br>
            <p> <button class="botonAgregar" type="submit">Actualizar</button>

            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
</body>

</html>